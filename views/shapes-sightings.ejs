<%- include('header', {title: `${requiredShape} Shape`}); -%>

<div class="shape-name">
  <h1>UFO Sightings of <%= requiredShape%> Shape</h1>
</div>

<% data.sightings.forEach((index) => { if (index.shape === requiredShape) { %>
<div class="single-sighting-container">
  <div class="shape-sighting-title">
    <h2>Sighting #<%= data.sightings.indexOf(index) +1 %></h2>
  </div>
  <div class="sighting-details">
    <% Object.keys(index).forEach((element) => { %>
    <div class="row">
      <div class="col-3 col-sm-2"><%= element.toUpperCase()%>:</div>
      <div class="col-9 col-sm-10"><%= index[element] %></div>
    </div>
    <% })%>
  </div>
</div>

<div class="row">
  <div class="col-3"></div>
  <div class="col-3 col-edit">
    <a href="/sighting/<%= data.sightings.indexOf(index)%>/edit" class="edit"
      >EDIT</a
    >
  </div>
  <div class="col-3">
    <form
      action="/sighting/<%= data.sightings.indexOf(index) %>/delete?_method=DELETE"
      method="POST"
    >
      <button type="submit" class="delete">DELETE</button>
    </form>
  </div>
  <div class="col-3"></div>
</div>
<% } %> <% }) %> <%- include('footer'); -%>
